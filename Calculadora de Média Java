import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        System.out.println("Bom dia aluno(a), informe sua primeira nota: ");
        double nota_1 = sc.nextDouble();
        
        System.out.println("Agora, diga-me sua segunda nota: ");
        double nota_2 = sc.nextDouble();
        
        double media = (nota_1 + nota_2) / 2;
        
        if (media >= 7.0)
            System.out.println("Você foi aprovado! Sua média foi: " + media);
        } else {
            System.out.println("Parece que você foi reprovado. Sua média foi: " + media);
        }
        
        sc.close();
    }
}
