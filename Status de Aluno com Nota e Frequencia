import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);

        System.out.println("Bom dia, aluno, qual é o seu nome? ");
        String nome = entrada.next();

        System.out.println("Para começar, digite a sua primeira nota: ");
        double P1 = entrada.nextDouble();

        System.out.println("Sua segunda nota, por obséquio: ");
        double P2 = entrada.nextDouble();

        double media = (P1 + P2) / 2;
        System.out.println("Sua média é: " + media);

        if (media >= 7.0) {
            System.out.println("Você foi aprovado com sucesso! ");
        }
        else if (media >=5) {
            System.out.println("Você está em recuperação, cuidado. ");
        }
        else {
            System.out.println("Você foi reprovado por nota. ");
        }

        System.out.println("Agora, vamos verificar sua taxa de presença, quantas vezes você esteve presente em sala? ");
        double taxa = entrada.nextDouble();

        if (taxa < 15) {
            System.out.println("Parece que você foi reprovado por frequência, mais sorte na próxima " + nome);
        }
        else {
            System.out.println("Você é um aluno que sempre aparece, muito bem! ");
        }

        System.out.println ("Vamos checar a sua situação atual: ");

        if (media >= 7.0 && taxa >=15) {
            System.out.println("Você é um aluno exemplar. Parábens pela aprovação," + nome);
        }
        else if (media < 5.0 && taxa <15) {
            System.out.println("Parabéns, você conseguiu ser reprovado com sucesso, " + nome);
        }
        else if (media >= 5.0 && media < 7.0 && taxa >= 15) {
            System.out.println("Você está de recuperação, mas tem boa frequência. Boa sorte na prova final, ");
        }
        else if (media < 5.0 && taxa >= 15) {
            System.out.println("Você foi reprovado por nota, mas tem boa frequência... isso adiantou de algo? " + nome);
        }
        else if (media >= 7.0 && taxa < 15) {
            System.out.println("Suas notas são boas, mas foi reprovado por falta. Que mico, " + nome);
        }
        }
    }

// Verificador de Status de Aluno em Java
