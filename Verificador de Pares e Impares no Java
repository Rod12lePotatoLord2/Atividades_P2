import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);

        System.out.println("Bom dia, qual é o seu nome? ");
        String nome = entrada.next();

        System.out.println("Informe o número que deseja investigar: ");
        int numero = entrada.nextInt();

        System.out.println("Agora, vamos verificar esse número! " + nome);

        if (numero % 2 == 0) {
            System.out.println("Parece que o nosso número é um número par. " + nome);
        }
        else {
            System.out.println("Esse definitivamente é um número ímpar! " + nome);
        }
    }
}

// Verificador de Pares e Ímpares Java
